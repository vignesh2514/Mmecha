<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@drawable/background_all"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.motomecha.app.bike_module.LastPage"
    tools:showIn="@layout/activity_last_page">


    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imageView5"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/confirmtick" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/transparent_primary"
        android:padding="2dp">

        <com.motomecha.app.MyTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:text="BOOKING PENDING..."
            android:textColor="@color/colorAccent"
            android:textScaleX="1.2"
            android:textSize="22sp" />


        <com.motomecha.app.MyTextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="CONFIRMATION MESSAGE WILL BE SENT TO \n YOUR MOBILE SHORTLY"
            android:textColor="@color/white"
            android:textScaleX="1.2" />

    </RelativeLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:padding="10dp"
        android:weightSum="2"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/transparent_primary"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
   android:layout_weight="1"
    android:weightSum="2"
    android:layout_height="wrap_content">


        <com.motomecha.app.MyTextView
            android:id="@+id/bookid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textScaleX="1.2"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="BOOKING ID" />

        <com.motomecha.app.MyTextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="1"
            app:textAllCaps="true"
            android:textColor="@color/white"
            android:textScaleX="1.2"
            android:text="MM2514" />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_height="wrap_content">


            <com.motomecha.app.MyTextView
                android:id="@+id/book_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textScaleX="1.2"
                android:textSize="20sp"
                android:layout_weight="1"
                android:text="BOOKING DATE" />

            <com.motomecha.app.MyTextView
                android:id="@+id/book_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="1"
                app:textAllCaps="true"
                android:textColor="@color/white"
                android:textScaleX="1.2"
                android:text="26-12-2017" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton

        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bookanother" />


</LinearLayout>
