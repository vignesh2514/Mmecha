<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/transparent_primary"
        android:layout_height="wrap_content"
        android:id="@+id/cardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:padding="3dp"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="3dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">


        <com.motomecha.app.Global_classes.MyTextView
            android:id="@+id/textView10"
            android:textScaleX="1.2"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center|start"
            android:padding="3dp"
            android:textSize="18sp"
            android:text="MOTOMECHA SERVICE PRODIVERS" />

        <com.motomecha.app.Global_classes.MyTextView
            android:id="@+id/textView11"
            android:textScaleX="1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|end"
            android:textSize="16sp"
            android:padding="3dp"
            android:textColor="@color/white"
            android:text="1900" />


    </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="3"
                android:layout_height="wrap_content">
                <com.motomecha.app.Global_classes.MyTextView
                    android:id="@+id/place_db"
                    android:text="CHENNAI"
                    android:textScaleX="1.2"
                    android:padding="3dp"
                    android:layout_weight="2"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|end"
                    android:tint="@color/colorAccent"
                    app:srcCompat="@drawable/ic_thumbs_pin" />
                <com.motomecha.app.Global_classes.MyTextView
                    android:id="@+id/likes_db"
                    android:text="130"
                    android:textScaleX="1.2"
                    android:padding="3dp"
                    android:gravity="end|bottom"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>