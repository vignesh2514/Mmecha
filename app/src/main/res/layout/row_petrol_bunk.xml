<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="4"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:id="@+id/aas"
    android:background="@color/transparent_primary">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/bunk_logo"
        android:layout_weight=".2"
        android:background="@drawable/petrol_bunk"
       />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_weight="2.8"
        android:padding="5dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:id="@+id/relativeLayout12">
        <com.motomecha.app.Global_classes.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:text="PENTROL BUNK"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textScaleX="1.2"
            android:id="@+id/bunk_name"
           />

        <com.motomecha.app.Global_classes.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:text="2.5 KM AWAY"
            android:layout_weight="1"
            android:textScaleX="1.2"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:id="@+id/distance"
         />



    </LinearLayout>

</LinearLayout>
