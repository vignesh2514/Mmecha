<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="1dp"
        android:layout_margin="5dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/transparent_primary"
        android:layout_height="wrap_content"
        android:id="@+id/cardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="2dp"
                android:layout_weight="0.5"
                android:layout_gravity="start"
                android:gravity="start|center"
                android:src="@drawable/setting_booking"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"

            android:layout_height="wrap_content">
            <com.motomecha.app.Global_classes.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALL SERVICE"
                android:textScaleX="1.2"
                android:layout_gravity="start"
                android:gravity="start|center"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:id="@+id/service_type"/>
            <com.motomecha.app.Global_classes.MyTextView
                android:layout_width="wrap_content"
                android:id="@+id/regis_number"
                android:text="TN-08-AC-0981"
                android:textScaleX="1.2"
                android:layout_gravity="start"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

        </LinearLayout>
            <com.motomecha.app.Global_classes.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPENED"
                android:textScaleX="1.2"
                android:layout_weight="1.5"
                android:layout_gravity="end"
                android:gravity="end|center"
                android:textSize="20sp"
                android:textColor="#05c03e"
                android:id="@+id/order_short"/>
        </LinearLayout>
            <View
                android:id="@+id/devider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
          android:gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/first_signal"

                app:srcCompat="@drawable/red_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/second_signal"
                app:srcCompat="@drawable/yellow_inactive"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/third_signal"
                app:srcCompat="@drawable/green_inactive"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>
<com.motomecha.app.Global_classes.MyTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/order_status"
    android:layout_margin="5dp"
    android:textScaleX="1.2"
    android:layout_gravity="center"
    android:text="YOUR BOOKING HAS BEEN PENDING"
    android:textSize="18sp"
    android:textColor="@color/white"/>
            <com.motomecha.app.Global_classes.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_date"
                android:textScaleX="1.2"
                android:layout_gravity="end"
                android:padding="5dp"
                android:text="15-06-2017"
                android:textSize="13sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>