<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/transparent_primary"
        android:layout_height="wrap_content"
        android:id="@+id/cardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                app:srcCompat="@drawable/car_new" />
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_height="wrap_content">

             <TextView
                 android:id="@+id/offer_title"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center|start"
                 android:padding="8dp"
                 android:text="AB Bike Zone"


                 android:textColor="@color/white"
                 android:textSize="16sp" />
             <TextView
                 android:id="@+id/offer_description"
                 android:maxLines="3"

                 android:padding="5dp"
                 android:textSize="14sp"
android:text="AB bike Zone Perumbakkam is giving you the best offer around the world you can also avail this so soon."
                 android:textColor="@color/white"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
             <TextView
                 android:id="@+id/offer_validity"
                 android:maxLines="1"
                 android:textSize="12sp"
                 android:padding="5dp"
                 android:text="Expires on 12-04-2017"
                 android:textColor="@color/white"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />

         </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>


</RelativeLayout>