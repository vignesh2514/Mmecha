<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@drawable/background_all"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.motomecha.app.Global_classes.InsurancePage"
    tools:showIn="@layout/activity_insurance_page">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        />
    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="2dp"

        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/transparent_primary"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
           android:weightSum="4"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <com.motomecha.app.Global_classes.MyTextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:textScaleX="1.2"
                android:minLines="2"
                app:textAllCaps="true"
                android:gravity="center_vertical"
                android:text="INSURANCE RENEWAL"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="2.5"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/liner_check"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="3dp"

            android:layout_height="match_parent">
            <com.motomecha.app.Global_classes.MyTextView
                android:id="@+id/year_hep"
                android:layout_width="wrap_content"
                android:textScaleX="1.2"
                android:padding="5dp"
                android:layout_weight="2"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="VEHICLE NUMBER" />
            <EditText
                android:id="@+id/tn1"
                android:hint="TN"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:padding="5dp"
                android:maxLength="2"

                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <EditText
                android:id="@+id/tn2"
                android:hint="07"
                android:padding="5dp"
                android:maxLength="2"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:textSize="22sp"


                android:layout_height="wrap_content"
                android:inputType="number" />

            <EditText
                android:id="@+id/tn3"
                android:hint="AR"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:textSize="22sp"

                android:maxLength="2"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <EditText
                android:id="@+id/tn4"
                android:hint="6743"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:textSize="22sp"
                android:maxLength="4"

                android:background="@color/white"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:padding="3dp"
                    android:layout_height="wrap_content">
    <com.motomecha.app.Global_classes.MyTextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:textScaleX="1.2"
        android:padding="5dp"
        android:layout_weight="2"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:text="YEAR OF MANUFACTURE" />
    <EditText
        android:id="@+id/yaer_select"
android:background="@color/white"
        android:layout_width="wrap_content"
        android:maxLength="4"
        android:inputType="number"
android:hint="2012"
        android:padding="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        />
                    </LinearLayout>

    <com.motomecha.app.Global_classes.MyTextView
        android:id="@+id/current_policy"
        android:layout_width="wrap_content"
        android:textScaleX="1.2"
        android:padding="5dp"
        android:layout_weight="2"
        android:textSize="18sp"

        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="YOUR CURRENT POLICY ?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/allpick_check"
            android:checked="true"
            android:layout_width="wrap_content"
            android:buttonTint="@color/colorAccent"
            android:layout_height="wrap_content" />
        <com.motomecha.app.Global_classes.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="POLICY EXPIRED"
            android:textScaleX="1.2"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            />

    </LinearLayout>



</LinearLayout>

            </ScrollView>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_margin="2dp"
                android:layout_gravity="bottom|right">

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:borderWidth="0dp"
                    app:fabSize="normal"
                    android:layout_gravity="center"
                    android:id="@+id/booknow"
                    android:backgroundTint="@color/colorRed"
                    android:src="@android:color/transparent" />

                <com.motomecha.app.Global_classes.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textScaleX="1.2"
                    android:text="BOOK"
                    app:textAllCaps="true"
                    android:elevation="16dp"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </FrameLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:visibility="invisible"
    />
</LinearLayout>
