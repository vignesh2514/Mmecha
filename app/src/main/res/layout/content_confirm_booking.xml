<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_weight="6"
    android:background="@drawable/background_all"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.motomecha.app.bike_module.ConfirmBooking"
    tools:showIn="@layout/activity_confirm_booking">
<RelativeLayout
    android:layout_margin="5dp"
    android:padding="2dp"
    android:layout_weight="2"
    android:layout_width="match_parent"
    android:background="@color/transparent_primary"
    android:layout_height="100dp">

    <com.motomecha.app.MyTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorAccent"
        android:textScaleX="1.2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="17sp"
        android:text="GENERAL SERVICE" />

    <com.motomecha.app.MyTextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="14dp"
        android:textSize="17sp"
        app:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textScaleX="1.2"
        android:text="TN-04-AR-2514" />
<ScrollView
    android:layout_width="match_parent"
    android:padding="5dp"

    android:layout_alignStart="@+id/textView"
    android:layout_below="@+id/textView"
    android:layout_alignEnd="@+id/textView4"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content">
    <com.motomecha.app.MyTextView
        android:id="@+id/textView5"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="GENERAL WATER WASH WILL BE DONE \nCOMPLETE MILLEGE CHECKUP "
        android:textScaleX="1.2"
        android:textColor="@color/white"
        />
</ScrollView>


</RelativeLayout>
    <RelativeLayout
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@color/transparent_primary"
        android:layout_height="100dp">
        <com.motomecha.app.MyTextView
            android:id="@+id/other_requi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textScaleX="1.2"
            android:textSize="17sp"
            android:text="OTHER SERVICE REQUIREMENTS"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_below="@+id/other_requi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp" >

            <EditText
                android:id="@+id/textView6"
                android:padding="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:hint="Fill in your other queries" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@color/transparent_primary"
        android:layout_height="100dp">
        <com.motomecha.app.MyTextView
            android:id="@+id/address_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textScaleX="1.2"
            android:textSize="17sp"
            android:text="ADDRESS"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_below="@+id/address_book"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp" >

            <EditText
                android:id="@+id/address_booking"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:layout_gravity="center"
                android:hint="Enter your address here"
                />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:background="@color/transparent_primary"
       >

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:weightSum="4"
    android:layout_height="wrap_content">
        <com.motomecha.app.MyTextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="5dp"
            android:gravity="center|start"
            android:text="SELECT PICK UP DATE"
            android:textColor="@color/colorAccent"
            android:textScaleX="1.2"
            android:textSize="17sp"
            app:textAllCaps="true" />
    <com.motomecha.app.MyTextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|end"
        android:layout_weight="1"
      android:textSize="14sp"
        android:text="25-12-2017"
        android:textColor="@color/white"
        android:textScaleX="1.2" />
        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:gravity="center|start"
            android:background="?attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_date_range" />


</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="3"

    android:layout_height="wrap_content"
    android:layout_weight="1"
 >
        <com.motomecha.app.MyTextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|start"
            android:padding="5dp"
            android:text="VEHICLE PICK UP"
            android:textColor="@color/colorAccent"
            android:textScaleX="1.2"

            android:textSize="17sp"
            />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
         android:layout_weight="1"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:id="@+id/radioGroup">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:checked="true"
                android:text="YES"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:text="NO"
                android:textColor="@color/white" />

        </RadioGroup>
</LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton5"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/confirmbooking" />

</LinearLayout>
